<div class="videos-index-div">

<p id="notice"><%= notice %></p>

<h1 class="videos-index"><span class="h1-span">Just Click the Pics to </span>Watch or Sing?</h1>

<table>
  <thead>
    <tr>
      <th> ___List of Artists ___</th>
      <th> List of Songs ___</th>
      <th> Picture or Artist or Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.artist %></td>
        <td><%= video.song %></td>
        <td><a href="<%= video.vid_url %>"><img class="index-iframe" src="<%= video.pic_url %>" alt="<%= video.song %>"></a></td>

        <td class="index-info"><%= link_to 'Info', video, {:style => 'color: #0f0; text-decoration: none;'}%></td>
        <td class="index-edit"><%= link_to 'Edit', edit_video_path(video), {:style => 'color: #cc0; text-decoration: none;'}%></td>
        <td class="index-delete"><%= link_to 'Destroy', video, :style => 'color: #d00; text-decoration: none;', method: :delete, data: { confirm: 'Are you sure?' }%></td>
        <td class="index-thoughts"><%= link_to 'Thoughts?', new_video_article_path(video), {:style => 'color: #FFF; text-decoration: none;'} %></td>
        <td><%= video.articles.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a New Video Here', new_video_path, {:style => 'color: #FF0; text-decoration: none; font-size: 36px; font-style: italic;'} %>

</div>
